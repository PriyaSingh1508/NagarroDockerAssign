@model BasicCalculator.Models.Calculator

<form asp-action="Index" method="post" class="p-4 shadow-lg bg-light rounded">
    <h3 class="text-center mb-4">Basic Calculator</h3>

    <div class="form-group row mb-3">
        <label for="NumberA" class="col-form-label col-sm-4">Number A:</label>
        <div class="col-sm-5">
            <input type="number" asp-for="NumberA" class="form-control" id="NumberA" placeholder="Enter first number" />
        </div>
    </div>

    <div class="form-group row mb-3">
        <label for="NumberB" class="col-form-label col-sm-4">Number B:</label>
        <div class="col-sm-5">
            <input type="number" asp-for="NumberB" class="form-control" id="NumberB" placeholder="Enter second number" />
        </div>
    </div>

    <div class="form-group row mb-3">
        <label for="Operation" class="col-form-label col-sm-4">Operation:</label>
        <div class="col-sm-5">
            <select asp-for="Operation" class="form-select" id="Operation">
                <option value="Add">Add</option>
                <option value="Subtract">Subtract</option>
                <option value="Multiply">Multiply</option>
                <option value="Divide">Divide</option>
            </select>
        </div>
    </div>

    <div class="text-center mb-3">
        <button type="submit" class="btn btn-primary btn-lg">Calculate</button>
    </div>

    <div class="form-group row mb-3">
        <label for="Result" class="col-form-label col-sm-4">Result:</label>
        <div class="col-sm-5">
            <input type="text" asp-for="@ViewData["Result"]" readonly class="form-control" id="Result" />
        </div>
    </div>
</form>
